<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boardColor"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.chav.poker.BasicQuizResultFragment">

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/basic_quiz_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"/>

    <TextView
        android:id="@+id/basic_quiz_points_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_below="@+id/basic_quiz_result_text"
        android:text="@string/hello_blank_fragment"/>

    <TextView
        android:id="@+id/basic_quiz_current_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/basic_quiz_points_result"
        android:text="@string/hello_blank_fragment"/>


    <ImageButton
        android:id="@+id/basic_quiz_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/basic_quiz_current_result"
        android:src="@drawable/reset_small"
        android:padding="15dp"
        android:background="@color/darkGreen"
        />

    <ImageButton
        android:id="@+id/basic_quiz_next_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_quiz_current_result"
        android:src="@drawable/next_small"
        android:padding="10dp"
        android:background="@color/darkGreen"
        />

</RelativeLayout>
