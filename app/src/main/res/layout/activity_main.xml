    </LinearLayout>

    <LinearLayout
        android:id="@+id/odds_holder"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/main_bottom_buttons_holder"
        android:orientation="vertical"
        tools:context=".controller.MainActivity">

        <LinearLayout
            android:id="@+id/player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            tools:context=".controller.CardsAndOddsFragment"
                >

                <Button
                    android:id="@+id/basic_quiz_player_one_card_one"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button"
                    />

                <Button
                    android:id="@+id/basic_quiz_player_one_card_two"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/basic_quiz_player_one_card_one"
                    android:layout_toRightOf="@+id/basic_quiz_player_one_card_one"
                    android:background="@drawable/button"
                    android:clickable="false"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/basic_quiz_player_one_card_two"
                    android:layout_toRightOf="@id/basic_quiz_player_one_card_two"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_one_odds_win"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:hint="p1 odds"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="50sp"/>

                    <TextView
                        android:id="@+id/player_one_your_odds"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/your_odds"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/player_one_odds_tie"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/tie_odds"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/basic_quiz_board"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/basic_quiz_card_one_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_front"
                android:clickable="false"/>

            <Button
                android:id="@+id/basic_quiz_card_two_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_front"
                android:clickable="false"/>

            <Button
                android:id="@+id/basic_quiz_card_three_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_front"
                android:clickable="false"/>

            <Button
                android:id="@+id/basic_quiz_card_four_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/card_front"
                android:clickable="false"/>

            <Button
                android:id="@+id/basic_quiz_card_five_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_front"
                android:clickable="false"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/basic_quiz_player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="30dp"
                            tools:context=".controller.CardsAndOddsFragment">

                <Button
                    android:id="@+id/basic_quiz_player_two_card_one"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/card_plus_sign"
                    />

                <Button
                    android:id="@+id/basic_quiz_player_two_card_two"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/basic_quiz_player_two_card_one"
                    android:layout_toRightOf="@+id/basic_quiz_player_two_card_one"
                    android:background="@drawable/button"
                    android:clickable="false"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/basic_quiz_player_two_card_two"
                    android:layout_toRightOf="@id/basic_quiz_player_two_card_two"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_two_odds_win"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:hint="p1 odds"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="50sp"/>

                    <TextView
                        android:id="@+id/player_two_your_odds"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/your_odds"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/player_two_odds_tie"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="0.00"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/tie_odds"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>