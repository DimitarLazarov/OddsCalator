<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boardColor"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/odds_holder"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="top"
        android:orientation="vertical"
        tools:context="com.example.chav.poker.MainActivity">

        <LinearLayout
            android:id="@+id/player_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            tools:context=".CardsAndOddsFragment">

                <Button
                    android:id="@+id/player_one_card_one"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/card_plus_sign"
                    />

                <Button
                    android:id="@+id/player_one_card_two"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/player_one_card_one"
                    android:layout_toRightOf="@+id/player_one_card_one"
                    android:background="@color/cardColor"
                    android:clickable="false"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/player_one_card_two"
                    android:layout_toRightOf="@id/player_one_card_two"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_one_odds_win"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:hint="p1 odds"
                        android:text="50%"
                        android:textColor="@color/white"
                        android:textSize="40sp"/>

                    <TextView
                        android:id="@+id/player_one_your_odds"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/your_odds"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/player_one_odds_tie"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/player_tie_odds"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/board"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/card_one_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/cardColor"
                android:clickable="false"/>

            <Button
                android:id="@+id/card_two_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/cardColor"
                android:clickable="false"/>

            <Button
                android:id="@+id/card_three_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/cardColor"
                android:clickable="false"/>

            <Button
                android:id="@+id/card_four_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/cardColor"
                android:clickable="false"/>

            <Button
                android:id="@+id/card_five_board"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cardColor"
                android:clickable="false"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="30dp"
                            tools:context=".CardsAndOddsFragment">

                <Button
                    android:id="@+id/player_two_card_one"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/card_plus_sign"
                    />

                <Button
                    android:id="@+id/player_two_card_two"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/player_two_card_one"
                    android:layout_toRightOf="@+id/player_two_card_one"
                    android:background="@color/cardColor"
                    android:clickable="false"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/player_two_card_two"
                    android:layout_toRightOf="@id/player_two_card_two"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_two_odds_win"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:hint="p1 odds"
                        android:text="50%"
                        android:textColor="@color/white"
                        android:textSize="40sp"/>

                    <TextView
                        android:id="@+id/player_two_your_odds"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/your_odds"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/player_two_odds_tie"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="p1 odds"
                        android:text="@string/player_tie_odds"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/odds_holder"
        android:background="@color/darkGreen"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Reset"/>

        <Button
            android:id="@+id/button_add_player"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Add player"/>
    </LinearLayout>
</RelativeLayout>