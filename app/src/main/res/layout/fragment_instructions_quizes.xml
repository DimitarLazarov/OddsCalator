<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boardColor"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".controller.SpeedQuizResultFragment">

    <TextView
        android:id="@+id/quiz_selection_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_selection_instructions"
        android:background="@color/darkGreen"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/quiz_selection_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/darkGreen"
            android:src="@drawable/cancel_small"
            />

        <ImageButton
            android:id="@+id/quiz_selection_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/darkGreen"
            android:src="@drawable/next_small"
            />



    </LinearLayout>


</RelativeLayout>