<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chav.poker.CardSelectionActivity">


    <TextView
        android:id="@+id/text_select_card"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:text="@string/select_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deuces_button"
            android:layout_width="0dp"
            android:text="2"
            android:fontFamily=""
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/treys_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/fours_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fives_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sixes_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="6"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sevens_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/eights_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/nines_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="9"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/tens_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="T"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/jacks_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="J"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/queens_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Q"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/kings_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="K"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/aces_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/hearts_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/diamonds_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/clubs_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/spades_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
