<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controller.CardSelectionActivity">

    <TextView
        android:id="@+id/text_select_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="@string/select_card"
        android:textAllCaps="false"
        android:textSize="40sp"
        />

    <LinearLayout
        android:id="@+id/suits_holder"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/hearts_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/hearts_very_small"/>

        <ImageButton
            android:id="@+id/diamonds_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/diamonds_very_small"/>

        <ImageButton
            android:id="@+id/clubs_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/spade_very_small"/>

        <ImageButton
            android:id="@+id/spades_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/image_very_small"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/suits_holder"
        android:layout_below="@id/text_select_card"
        >



        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            >

            <Button
                android:id="@+id/deuces_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/treys_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/fours_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/select_card_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            >

            <Button
                android:id="@+id/fives_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/sixes_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="6"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/sevens_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/select_card_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            >

            <Button
                android:id="@+id/eights_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/nines_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="9"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/tens_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="T"
                android:textSize="@dimen/select_card_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            >

            <Button
                android:id="@+id/jacks_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="J"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/queens_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Q"
                android:textSize="@dimen/select_card_text"/>

            <Button
                android:id="@+id/kings_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="K"
                android:textSize="@dimen/select_card_text"/>
        </LinearLayout>

        <Button
            android:layout_weight="1"
            android:id="@+id/aces_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="A"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/select_card_text"/>

    </LinearLayout>

</RelativeLayout>
