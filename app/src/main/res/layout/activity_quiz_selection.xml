<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boardColor"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chav.poker.QuizSelectionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/main_menu_image"/>

    <Button
        android:id="@+id/basic_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/cardColor"
        android:text="@string/basic_quiz"
        android:textColor="@color/darkGreen"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/advanced_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardColor"
        android:text="@string/advanced_quiz"
        android:textColor="@color/darkGreen"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardColor"
        android:text="@string/instructions"
        android:textColor="@color/darkGreen"
        android:textSize="20sp"/>

</LinearLayout>
