<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/boardColor"
    android:orientation="vertical"
    tools:context="com.example.chav.poker.controller.CreateCramDeckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="cancel"
            android:id="@+id/create_deck_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/create_deck_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="next"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/create_deck_create_cram_deck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Create"/>
    </LinearLayout>

    <EditText
        android:id="@+id/create_deck_title_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title of deck"/>

    <Button
        android:id="@+id/create_deck_add_card"
        android:text="add card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_deck_recycler_add_cram_cards"
        android:visibility="gone">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>
