<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/boardColor"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.chav.poker.controller.CreateCramDeckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/create_deck_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="cancel"
            android:textColor="@color/darkGreen"/>

        <Button
            android:id="@+id/create_deck_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="next"
            android:textColor="@color/darkGreen"/>

        <Button
            android:id="@+id/create_deck_create_cram_deck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkGreen"
            android:background="@drawable/button"
            android:text="Create"
            android:visibility="gone"/>
    </LinearLayout>

    <EditText
        android:id="@+id/create_deck_title_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blackCards"
        android:background="@color/cardColor"
        android:maxLength="20"
        android:hint="Title of deck"
        android:textColorHint="@color/darkGreen"
        android:padding="10dp"/>

    <Button
        android:id="@+id/create_deck_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGreen"
        android:background="@drawable/button"
        android:text="add card"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/create_deck_recycler_add_cram_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
