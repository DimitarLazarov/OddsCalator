<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_vet6"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.chav.poker.controller.CramModeActivity">


    <LinearLayout
        android:id="@+id/cram_mode_lin_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/cram_mode_button_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/cardColor"
            android:padding="30dp"/>

        <TextView
            android:id="@+id/cram_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="CRAM MODE"
            android:textColor="@color/cardColor"
            android:textSize="30dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/cardColor"
            android:padding="30dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cram_mode_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cram_mode_lin_layout_bottom"
        android:layout_below="@+id/cram_mode_lin_layout_top"
        android:scaleType="centerInside">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/cram_mode_lin_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/cram_mode_button_wrong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="20dp"
            android:text="Wrong"
            android:textColor="@color/darkGreen"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/cram_mode_button_correct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="20dp"
            android:text="Correct"
            android:textColor="@color/darkGreen"
            android:textSize="20dp"/>
    </LinearLayout>


</RelativeLayout>
